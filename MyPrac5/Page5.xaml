<Page x:Class="MyPrac5.Page5"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyPrac5"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page5" FontFamily="Candara" FontSize="14">

    <Grid>
        <StackPanel Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Введите число:" Margin="16" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBox x:Name="inputN" Margin="16" FontWeight="Bold" Height="22" Width="50"/>
            <Button Content="Рассчитать" Width="80" Height="32" Margin="16" Click="Button_Click"/>
            <TextBox x:Name="Answer" Margin="16" Height="42" Width="150"/>
        </StackPanel>
    </Grid>
</Page>
